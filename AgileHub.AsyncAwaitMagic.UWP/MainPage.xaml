<Page
    x:Class="AgileHub.AsyncAwaitMagic.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AgileHub.AsyncAwaitMagic.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Height="35" Content="Magic 1" HorizontalAlignment="Stretch" Click="Button_Click"/>

        <Button Grid.Row="2" Height="35" HorizontalAlignment="Stretch" Content="Magic 2" Click="Button_Click_1"/>

        <TextBlock Name="txtResult" Grid.Row="1"/>

    </Grid>
</Page>
